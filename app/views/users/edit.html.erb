<h1>Basic Info</h1>
<%= render 'form' %>

<h1>Interests</h1>
<% @user.interests.each do |interest| %>
    <%= interest.name %><br>
<% end %>

<h2>Add an Interest:</h2>
<%= form_for([@user, @user.interests.build]) do |f| %>
  <p>
    <%= f.label :name %>
    <%= f.text_field :name %>
  </p>
  <p>
    <%= f.submit class: "btn btn-large btn-primary", :value => 'Add Interest' %>
  </p>
<% end %>

<%= link_to 'Show', @user %> |
<%= link_to 'Back', users_path %>
