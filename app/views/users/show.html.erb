    <div class="jumbotron">
    <h2>Basic Info</h2>
    <p>

      <strong>Email</strong>
      <%= @user.email %>
    <br>
      <strong>Attended</strong>
      <% if @user.schools.first != nil %>
        <%= @user.schools.first.name %>
      <% else %>
        Unknown
      <% end %> 
    <br>
      <strong>Work at</strong>
      <% if @user.workplaces.first != nil %>
        <%= @user.workplaces.first.name %>
      <% else %>
        Unknown
      <% end %> 
    <br>
      <strong>Live in</strong>
      <% if @user.locations.first != nil %>
        <%= @user.locations.first.name %>
      <% else %>
        Unknown
      <% end %>

    </p>
    <h2> My Interests</h2>
    <% @user.interests.each do |interest| %>
      <p>
        <%= interest.name %>
      </p>
    <% end %>
    <%= link_to 'Edit', edit_user_path(@user) %> |
    <%= link_to 'Back', users_path %>
