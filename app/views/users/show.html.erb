<div id="profile-wrap">
  <div id="profile">
    <%= gravatar_for @user %> 
    <UserName> <%= @user.name %> </UserName> <br>
    <p> 
      <span class="glyphicon glyphicon-inbox"> </span>
      <% if @user.schools.first != nil %>
        Goes to <%= @user.schools.first.name %>
      <% else %>
        School Unknown
    <% end %>    
    </p>
    <p> 
      <span class="glyphicon glyphicon-briefcase"> </span>
      <% if @user.workplaces.first != nil %>
        Works at <%= @user.workplaces.first.name %>
      <% else %>
        Workplace Unknown
    <% end %>  
    </p>
    <i><b> 
      <span class="glyphicon glyphicon-globe"> </span>
      <% if @user.locations.first != nil %>
        <%= @user.locations.first.name %>
      <% else %>
        Location Unknown
    <% end %>
    </b></i>
  </div>
</div>



